<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/notifsOnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="23dp"
            android:switchPadding="76dp"
            android:theme="@style/ChangingSwitch" />

        <TextView
            android:id="@+id/notifOnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notifsOnSwitch"
            android:layout_alignBottom="@+id/notifsOnSwitch"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:text="Notifications Enabled"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorSplashDark" />

        <View
            android:id="@+id/divider_0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/notifsOnSwitch"
            android:layout_marginTop="13dp"
            android:background="@android:color/darker_gray" />

        <Switch
            android:id="@+id/notifsUseDataSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/notifsOnSwitch"
            android:layout_below="@+id/divider_0"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:switchPadding="76dp"
            android:theme="@style/ChangingSwitch" />

        <TextView
            android:id="@+id/notifUseDataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notifsUseDataSwitch"
            android:layout_alignBottom="@+id/notifsUseDataSwitch"
            android:layout_alignStart="@+id/notifOnLabel"
            android:text="Allow Data Usage"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorSplashDark" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/notifsUseDataSwitch"
            android:layout_marginTop="18dp"
            android:background="@android:color/darker_gray" />

        <SeekBar
            android:id="@+id/notifsShownSlider"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider_1"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:maxHeight="50dp"
            android:max="5"
            android:progress="2"
            android:theme="@style/ChangingSwitch" />

        <TextView
            android:id="@+id/notifsShownLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notifsShownSlider"
            android:layout_alignStart="@+id/notifUseDataLabel"
            android:text="Notifications Shown"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorSplashDark" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
